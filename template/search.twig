<h1 style='color: red'>
    Copy this file to &lt;project_dir&gt;/template/modules/catalog/search.twig and there edit
</h1>

<h1>SEARCH CLASS: {{ searchClass }}</h1>

{% include module.path ~ '/template/_breadcrumbs.twig' %}


<form><input type="text" name="q" value="{{ _request.queryParams.q }}"><input type="submit"></form>

{% if error %}
    <h1 style='color: red'>
        {{ error }}
    </h1>
{% else %}
    <h2>Искали: {{ searchQuery.query }}</h2>


    {% include module.path ~ '/template/_search.pagination.twig' with {'query': searchQuery.query} %}

    {% if result.products.count > 0 %}

        <h2>Найдено: {{ result.products.count }}</h2>

        <div>
            <h2>Найденные товары</h2>
            <ul>
                {% for product in result.products %}
                    <li><a href="{{ path("catalog/product", {"slug": product.getSlug }) }}">{{ product.getName }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endif %}
